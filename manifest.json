{
    "name": "Easy Read",
	"permissions": [
		"storage",
		"scripting",
		"activeTab"
	],
    "version": "1.0.0",
    "description": "Now you can read easily",
    "manifest_version": 3,
    "author": "Sagi Belmash",
	"icons": {
        "16": "icon16.png",
        "32": "icon32.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "action":{
		"default_popup": "popup.html",
		"default_title": "Easy Read",
		"default_icon": {
            "16": "icon16.png",
            "32": "icon32.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content.js"]
		}
	]
	
}